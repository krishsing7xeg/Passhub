import React, { useEffect, useState } from 'react';
import { useParams } from 'react-router-dom';
import api from '../../utils/api';
import SecurityInviteForm from '../../components/visitor/SecurityInviteForm';
import AnalyticsChart from '../../components/visitor/AnalyticsChart';

const ManageEvent = () => {
  const { eventId } = useParams();
  const [event, setEvent] = useState(null);
  const [analytics, setAnalytics] = useState(null);
  const [error, setError] = useState(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    let isMounted = true;
    const loadData = async () => {
      if (!eventId) return;
      try {
        setLoading(true);
        const [eventRes, analyticsRes] = await Promise.all([
          api.get(`/host/places/${eventId}/dashboard`),
          api.get(`/analytics/place/${eventId}/visit-stats`),
        ]);
        if (isMounted) {
          setEvent(eventRes.data.dashboard);
          setAnalytics(analyticsRes.data);
        }
      } catch (fetchError) {
        if (isMounted) {
          setError('Failed to load data: ' + (fetchError.response?.data?.message || fetchError.message));
        }
      } finally {
        if (isMounted) {
          setLoading(false);
        }
      }
    };
    loadData();
    return () => { isMounted = false; };
  }, [eventId]);

  if (error) return <div className="p-6 text-red-500">{error}</div>;
  if (loading) return <div className="p-6">Loading...</div>;
  if (!event) return <div className="p-6">No event data available.</div>;

  return (
    <div className="p-6">
      <h1 className="text-2xl font-bold mb-4">Manage {event.place?.name || 'Event'}</h1>
      <SecurityInviteForm placeId={eventId} />
      {analytics && <AnalyticsChart data={analytics} />}
    </div>
  );
};

export default ManageEvent;
